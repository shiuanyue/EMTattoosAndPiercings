<Defs>

<!-- belts -->

  <ThingDef ParentName="ApparelBase">
    <defName>I_EMClothBelt</defName>
    <label>cord belt</label>
    <description>A simple cord belt.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
    		<texPath>Things/Item/Jewel/ClothBelt</texPath>
	
		<graphicClass>Graphic_Single</graphicClass>

    </graphicData>

	<costStuffCount>25</costStuffCount>
    	<stuffCategories>
    		  <li>Fabric</li>
   	 </stuffCategories>

    <statBases>
      <WorkToMake>1000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>1.4</Mass>
      <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
    </statBases>
       <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
	 <careIfWornByCorpse>true</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>Neolithic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>

      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        	<li>CraftingSpot</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>



