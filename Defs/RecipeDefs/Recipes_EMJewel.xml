    <defName>MakeEMSilEar</defName>
    <label>Craft silver earring</label>
    <description>Create a crude silver hoop earring for piercing.</description>
    <jobString>Making earring</jobString>
    <workAmount>1500</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <products>
      <I_EMSilEar>1</I_EMSilEar>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Silver</li>
        <li>WoodLog</li>
